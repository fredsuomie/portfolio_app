<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About Me"
        android:textSize="24sp"
        android:textStyle="bold"
        android:paddingBottom="16dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/profile"
        android:layout_gravity="center"
        android:scaleType="centerCrop" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello, I’m Alfred Menwon Suomie, a Cloud Engineer based in Rajkot, India. I specialize in Software Development and Cloud Computing, with 2 years of experience in Software Development. I’m passionate about creating innovative solutions that make a difference."
        android:paddingTop="16dp"
        android:textSize="16sp" />

</LinearLayout>
